2. gradient_effect.xml CODE
  <?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient android:angle="270" android:startColor="@color/colorGrey" android:endColor="#ff0000"/>

</shape>

3. red_button.xml CODE
  <?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false"
        android:state_enabled="true"
        android:drawable="@drawable/gradient_effect">

    </item>
</selector>

4. ripple_effect_numbers CODE
  <?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#573F3F">
<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/colorBlack">

        </solid>
    </shape>
</item>
</ripple>

5. ripple_effect_operations
  <?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#797979">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGrey">

            </solid>
        </shape>
    </item>
</ripple>
